server {
    listen <%= @port %>;
    server_name <%= @server_name %>;

    root <%= @docroot %>;
    index index.html index.php;
    location / {
        try_files $uri $uri/ /index.html;
    }
    location ~ \.php$ {
        fastcgi_pass unix:/tmp/hhvm.sock;
        fastcgi_param  SCRIPT_FILENAME  $document_root$fastcgi_script_name;
        include        fastcgi_params;
    }
}