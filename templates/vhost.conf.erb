server {
    listen <%= @port %>;
    <%if @server_name.is_a? Array -%>
    <% @server_name.each do |server_name| -%><%= "server_name #{@server_name};\n" %><% end
    -%>
    <% elsif @server_name != '' -%>
        <%= "server_name #{@name};" -%>
    <% end -%>

    root <%= @docroot %>;
    index index.html index.php;
    location / {
        try_files $uri $uri/ /index.html;
    }
    location ~ \.php$ {
        fastcgi_pass unix:/tmp/hhvm.sock;
        fastcgi_param  SCRIPT_FILENAME  $document_root$fastcgi_script_name;
        include        fastcgi_params;
    }
}